<% layout('/layouts/boilerplate') %>

<div class="container mt-0 mb-2">
  <div class="row justify-content-center">
    <div class="col-lg-10 col-md-11 col-sm-12">

      <div class="card shadow-sm p-4">

        <h2 class="text-center mb-3 text-danger border-bottom pb-2">
          Payment
        </h2>

        <p class="text-center text-muted"><%= listing.title %></p>

        <hr>

        <div class="d-flex justify-content-between">
          <span>Subtotal</span>
          <strong>‚Çπ <%= subtotal %></strong>
        </div>

        <div class="d-flex justify-content-between mt-2">
          <span>GST (18%)</span>
          <strong>‚Çπ <%= gst %></strong>
        </div>

        <hr>

        <div class="d-flex justify-content-between fs-5">
          <span>Total</span>
          <strong>‚Çπ <%= total %></strong>
        </div>

        <hr>

        <h6 class="mt-3">Select Mode of Payment</h6>

        <div class="mt-2">
          <div class="form-check">
            <input class="form-check-input" type="radio" checked name="one">
            <label class="form-check-label">üí≥ Credit / Debit Card</label>
          </div>

          <div class="form-check">
            <input class="form-check-input" type="radio" name="one">
            <label class="form-check-label">üè¶ Net Banking</label>
          </div>

          <div class="form-check">
            <input class="form-check-input" type="radio" name="one">
            <label class="form-check-label">üì± UPI / Wallet</label>
          </div>

          <div class="form-check">
            <input class="form-check-input" type="radio" name="one">
            <label class="form-check-label">üßæ Pay at Property</label>
          </div>
        </div>

        <form action="/listings/<%= listing._id %>/bookings/confirm" method="POST">
          <button class="btn btn-success w-100 mt-4">
            Pay ‚Çπ <%= total %>
          </button>
        </form>

        <p class="text-muted text-center mt-3" style="font-size: 0.85rem;">
          ‚ö†Ô∏è Demo payment page ‚Äî no real transaction involved
        </p>

      </div>

    </div>
  </div>
</div>


