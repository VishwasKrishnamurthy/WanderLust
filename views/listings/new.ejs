<% layout('/layouts/boilerplate')%>
<div class="listing-bg" style="min-height: 100vh; width: 100vw; position: absolute; top: 0; left: 0; z-index: 1;"></div>
<div class="d-flex flex-column align-items-center justify-content-center w-100" style="position: relative; z-index: 2; min-height: 100vh;">
  <div class="listing-card p-4 p-md-5 shadow rounded-4 w-100" style="max-width: 540px; margin-top: 7.5rem !important;">
    <div class="text-center mb-4">
      <h2 class="fw-bold mb-1" style="font-family: 'Poppins', sans-serif;">Create a <span style="color: #ff385c;">New Listing</span></h2>
      <p class="text-muted mb-0">Share your amazing place with the world!</p>
    </div>
    <form action="/listings/create" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" id="title" name="title" class="form-control border-dark" placeholder="e.g., Cozy Apartment in Paris" required />
        <div class="valid-feedback">Title looks good!</div>
        <div class="invalid-feedback">Please provide a valid title.</div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea id="description" name="description" class="form-control border-dark" rows="4" placeholder="Describe your listing..." required></textarea>
        <div class="valid-feedback">Description looks good!</div>
        <div class="invalid-feedback">Please write a description.</div>
      </div>
      <div class="mb-3">
        <label for="category" class="form-label">Category</label>
        <select id="category" name="category" class="form-control border-dark" required>
          <option value="" disabled selected>Select a category</option>
          <option value="trending">Trending</option>
          <option value="rooms">Rooms</option>
          <option value="iconiccities">Iconic Cities</option>
          <option value="castles">Castles</option>
          <option value="amazingpools">Amazing Pools</option>
          <option value="camping">Camping</option>
          <option value="mountains">Mountains</option>
          <option value="arctic">Arctic</option>
          <option value="farms">Farms</option>
          <option value="beach">Beach</option>
          <option value="trophical">Trophical</option>
          <option value="domes">Domes</option>
          <option value="boat">Boats</option>
        </select>
        <div class="invalid-feedback">Please select a category.</div>
      </div>
      <div class="row">
        <div class="col-md-6 mb-3">
          <label for="cost" class="form-label">Cost per night</label>
          <input type="number" id="cost" name="cost" class="form-control border-dark" required />
          <div class="invalid-feedback">Please provide a valid cost.</div>
        </div>
        <div class="col-md-6 mb-3">
          <label for="country" class="form-label">Country</label>
          <input type="text" id="country" name="country" class="form-control border-dark" placeholder="e.g., France" required />
          <div class="invalid-feedback">Please enter a valid country.</div>
        </div>
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input type="text" id="location" name="location" class="form-control border-dark" placeholder="e.g., Paris" required />
        <div class="invalid-feedback">Please provide a valid location.</div>
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Upload images</label>
        <input type="file" id="image" name="image" class="form-control border-dark" multiple accept="image/*" />
        <div class="invalid-feedback">Please select one or more images.</div>
      </div>
      <button type="submit" class="btn btn-primary w-100 py-2 mt-2">Create Listing</button>
    </form>
  </div>
</div>
<style>
  html, body {
    height: 100%;
    margin: 0;
    padding: 0;
    width: 100vw;
    min-height: 100vh;
    overflow-x: hidden;
    background: none;
  }
  .listing-bg {
    background: linear-gradient(120deg, #f8fafc 0%, #fceabb 100%);
    min-height: 100vh;
    width: 100vw;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
  }
  .listing-card {
    background: #fff;
    border: none;
    box-shadow: 0 4px 24px rgba(0,0,0,0.08);
    border-radius: 1.5rem;
    transition: box-shadow 0.2s;
  }
  .listing-card:focus-within {
    box-shadow: 0 8px 32px rgba(255,56,92,0.10);
  }
  .form-label {
    font-weight: 500;
    color: #333;
  }
  .form-control {
    border-radius: 0.75rem;
    font-size: 1rem;
    padding: 0.75rem 1rem;
    border: 1.5px solid #e0e0e0;
    transition: border-color 0.2s;
  }
  .form-control:focus {
    border-color: #ff385c;
    box-shadow: 0 0 0 0.15rem rgba(255,56,92,0.10);
  }
  .btn-primary {
    background-color: #ff385c;
    border: none;
    border-radius: 0.75rem;
    font-weight: 600;
    font-size: 1.1rem;
    letter-spacing: 0.5px;
    transition: background 0.2s;
  }
  .btn-primary:hover, .btn-primary:focus {
    background-color: #e31c5f;
  }
  @media (max-width: 576px) {
    .listing-card {
      padding: 2rem 1rem;
      border-radius: 1rem;
      margin-top: 4.5rem !important;
    }
    .listing-bg {
      padding: 0;
    }
  }
</style>
<script>
    (function () {
        'use strict';
        var forms = document.querySelectorAll('.needs-validation');
        Array.prototype.slice.call(forms).forEach(function (form) {
            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    })();
</script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>